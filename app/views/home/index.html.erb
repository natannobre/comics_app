<%= render partial: "shared/top_menu" %>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">
	<% @comics.each do |comic| %>
		<%= render partial: "home/components/card", locals: {comic_id:comic[:id], image_src: comic[:path], title: comic[:title]} %>
	<% end %>
</div>
<div class="mx-auto mt-4">
	<nav>
    <ul class="row justify-content-between ps-0">
      <div class="col-3">
        <%= button_to "PREVIOUS PAGE", prev_page_path(page: params[:page]), class: 'page-link' %>
      </div>
      <div class="col-3">
        <%= button_to "NEXT PAGE", next_page_path(page: params[:page]), class: 'page-link' %>
      </div>
    </ul>
  </nav>
</div>